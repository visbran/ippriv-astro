---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';
import { Toaster } from '../components/ui/toaster';
---

<Layout
  title="Contact IPPriv - Get in Touch | Support & Inquiries"
  description="Contact IPPriv for support, API questions, or business inquiries. Our team is here to help with your IP privacy needs."
  keywords="contact IPPriv, support, API help, business inquiries, customer service"
>
  <div class="pt-24 pb-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="animate-fade-in">
        <header class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-bold mb-6 gradient-text">
            Contact Us
          </h1>
          <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
            Have a question or need help? We'd love to hear from you.
          </p>
        </header>

        <ContactForm client:load />
      </div>
    </div>
  </div>
  <Toaster client:load />
</Layout>
