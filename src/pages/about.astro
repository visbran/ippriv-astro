---
import Layout from '../layouts/Layout.astro';
import { Shield, Lock, Eye, Users } from 'lucide-react';

const values = [
  {
    icon: 'Shield',
    title: 'Privacy First',
    description: 'We believe your data belongs to you. Our tools are designed with privacy at the core.'
  },
  {
    icon: 'Lock',
    title: 'Security Focused',
    description: 'Enterprise-grade encryption and security practices protect every interaction.'
  },
  {
    icon: 'Eye',
    title: 'Transparency',
    description: 'Open about our practices, clear about our policies, honest in our communications.'
  },
  {
    icon: 'Users',
    title: 'Community Driven',
    description: 'Built by privacy advocates, for everyone who values their digital freedom.'
  }
];
---

<Layout
  title="About IPPriv - Privacy-Focused IP Tools & Digital Privacy Solutions"
  description="Learn about IPPriv's mission to provide privacy-focused IP lookup and geolocation tools. Discover our commitment to user privacy and data protection since 2024."
  keywords="about IPPriv, privacy tools, IP lookup company, digital privacy, mission values"
>
  <div class="pt-24 pb-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <article class="animate-fade-in">
        <header class="text-center mb-16">
          <h1 class="text-4xl md:text-5xl font-bold mb-6 gradient-text">
            About IPPriv
          </h1>
          <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
            Empowering users with privacy-focused IP tools and geolocation services since 2024.
          </p>
        </header>

        <section class="prose prose-lg dark:prose-invert max-w-none mb-16">
          <h2 class="text-2xl font-semibold mb-4 text-foreground">Our Mission</h2>
          <p class="text-muted-foreground leading-relaxed mb-6">
            At IPPriv, we're on a mission to make IP lookup and geolocation tools accessible 
            to everyone while maintaining the highest standards of privacy and security. 
            In an age where digital footprints are constantly tracked, we provide tools that 
            respect your privacy.
          </p>
          
          <h2 class="text-2xl font-semibold mb-4 text-foreground">What We Do</h2>
          <p class="text-muted-foreground leading-relaxed mb-6">
            We offer a comprehensive suite of IP-related tools including IP lookup, 
            geolocation services, VPN detection, and privacy analysis. Our API serves 
            developers and businesses who need reliable, fast, and privacy-respecting 
            IP intelligence.
          </p>
        </section>

        <section class="mb-16">
          <h2 class="text-2xl font-semibold mb-8 text-center text-foreground">Our Values</h2>
          <div class="grid md:grid-cols-2 gap-6">
            {values.map((value, index) => (
              <div 
                class="glass-card p-6 rounded-2xl animate-fade-in-up"
                style={`animation-delay: ${index * 0.1}s`}
              >
                {value.icon === 'Shield' && (
                  <svg class="w-10 h-10 text-primary mb-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/></svg>
                )}
                {value.icon === 'Lock' && (
                  <svg class="w-10 h-10 text-primary mb-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
                )}
                {value.icon === 'Eye' && (
                  <svg class="w-10 h-10 text-primary mb-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0"/><circle cx="12" cy="12" r="3"/></svg>
                )}
                {value.icon === 'Users' && (
                  <svg class="w-10 h-10 text-primary mb-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                )}
                <h3 class="text-lg font-semibold mb-2 text-foreground">{value.title}</h3>
                <p class="text-muted-foreground">{value.description}</p>
              </div>
            ))}
          </div>
        </section>
      </article>
    </div>
  </div>
</Layout>
