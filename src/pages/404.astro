---
import Layout from '../layouts/Layout.astro';
import { motion } from 'framer-motion';
---

<Layout 
  title="404 - Page Not Found | IPPriv"
  description="The page you're looking for doesn't exist. Return to IPPriv home."
>
  <div class="container mx-auto px-4 py-24 min-h-[70vh] flex items-center justify-center">
    <div class="text-center max-w-2xl">
      {/* 404 Number */}
      <h1 class="text-8xl md:text-9xl font-bold gradient-text mb-6">
        404
      </h1>
      
      {/* Title */}
      <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
        Page Not Found
      </h2>
      
      {/* Description */}
      <p class="text-lg text-muted-foreground mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      
      {/* Actions */}
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/" 
          class="px-8 py-3 rounded-xl bg-primary text-primary-foreground font-medium
                 hover:bg-primary/90 transition-all duration-300 hover:shadow-lg"
        >
          Back to Home
        </a>
        
        <a 
          href="/ip-lookup" 
          class="px-8 py-3 rounded-xl bg-card/80 backdrop-blur-sm border border-border/50 
                 hover:border-primary/50 hover:bg-card hover:shadow-lg transition-all duration-300
                 text-foreground font-medium"
        >
          IP Lookup Tool
        </a>
      </div>
      
      {/* Decorative */}
      <div class="mt-16 text-muted-foreground/30">
        <svg 
          class="w-32 h-32 mx-auto" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke="currentColor"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
      </div>
    </div>
  </div>
</Layout>
